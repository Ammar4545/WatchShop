@page "/product/{id:int}"
@using WatchShop.Models
@inject ProductService produtServices
<div class="card">
    <div class="d-flex justify-content-center p-2">
        <img src="@_product.ImageUrl" height="220" alt="shit" />
    </div>
    <div class="card-body">
        <h4 class="card-title">
            @_product.NAme
        </h4>
        <p class="card-text">@_product.Description</p>
        <p class="text-secondary text-center h2 font-weight-bold">
            @_product.Price.ToString("C")
        </p>
        <p>
            @_product.Specification
        </p>
        <a href="#" class="btn btn-danger w-100">Add To Cart</a>
    </div>
</div>

@code {
    Product _product = null;
    protected override void OnInitialized()
    {
        _product = produtServices.GetProduct(Id);
        base.OnInitialized();
    }
    [Parameter]
    public int Id { get; set; }
}
